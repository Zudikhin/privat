				margin-top 25px
				justify-content flex-start
			.splide__arrow
				width 46px
				height 46px
				background-color rgba(#B6B6B6, .45)
				svg
					width 30px
				&:hover
					background-color $mainclr
				&[disabled]
					background-color transparent
					cursor default
					pointer-events none
					&:hover
						background-color transparent
				&--prev
					margin-left 0
			.splide__pagination
				display flex
				flex-direction row
				justify-content center
				align-items center
				width 100%
				padding 0
				bottom 11px
				li
					margin-right 5px
					&:last-child
						margin-right 0
			.splide__pagination__page
				display block
				height 24px
				width 24px
				border-radius 50%
				background-color transparent
				transition .5s ease
				border 1px solid transparent
				position relative
				opacity 1
				margin 0
				&:before
					content ''
					position absolute
					display block
					width 4px
					height 4px
					border-radius 50%
					top 50%
					left 50%
					margin -2px 0 0 -2px
					background-color #575A5B
					transition background-color .5s ease
				&.is-active
					transform scale(1)
					border-color $white
					&:before
						background-color $white

$white = #fff
$black = #090F11
$mainclr = #984E33
$green = #3a5157

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap')

@font-face
	font-family 'Phonk Sans'
	src url('../font/PhonkSans-Light.woff2') format('woff2'),
		url('../font/PhonkSans-Light.woff') format('woff');
	font-weight 300
	font-style normal
	font-display swap

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Montserrat', sans-serif
	background-color $black
	font-weight 400
	color $white

button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow, opacity
	cursor pointer
	&:focus
		outline none
a
	text-decoration none
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow, opacity
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

ul
	margin 0
	padding 0
	list-style none

svg
	transition fill .5s ease

::-moz-selection
	background $mainclr
	color $white
	text-shadow none
::selection
	background $mainclr
	color $white
	text-shadow none

::-webkit-input-placeholder
	color $white
	opacity 1
::-moz-placeholder
	color $white
	opacity 1
:-moz-placeholder
	color $white
	opacity 1
:-ms-input-placeholder
	color $white
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px
:focus-visible
	outline 0px dotted

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background rgba($white, .04)

body::-webkit-scrollbar-thumb
	background-color $mainclr
	outline 0 solid $white

/*==============================
	Header
==============================*/
.header
	position fixed
	top 0
	left 0
	width 100%
	border-bottom 1px solid $white
	background-color $black
	z-index 99
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 100%
		height 65px
		max-width 1780px
		margin 0 auto
	&__logo
		height 40px
		width 40px
		overflow hidden
		img
			width auto
			height 40px
	&__phone
		display none
	&__social
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		width auto
		li
			margin-right 10px
			&:last-child
				margin-right 0
		a
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 30px
			height 30px
			border-radius 50%
			background-color rgba($mainclr, .5)
			img
				width 20px
				height auto
	&__btn
		display none
	&__menu
		width 40px
		height 20px
		display block
		position relative
		span
			position absolute
			left 0
			width 40px
			height 1px
			background-color $white
			transition .5s ease
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
			&:last-child
				top 20px
		&--active
			span
				&:first-child
					transform rotate(45deg)
					top 10px
				&:nth-child(2)
					opacity 0
				&:last-child
					transform rotate(-45deg)
					top 10px
	@media (min-width: 768px)
		border none
		&__content
			height 80px
		&__phone
			display block
			font-size 18px
			color $white
			font-weight 500
			margin-left auto
			margin-right 40px
		&__social
			margin-right 40px
			a
				width 34px
				height 34px
		&__btn
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 200px
			height 50px
			border 1px solid $white
			border-radius 8px
			background-color $black
			margin-right 40px
			color $white
			font-size 18px
	@media (min-width: 1200px)
		&__logo
			width auto
			overflow visible
		&__social
			a
				&:hover
					background-color $mainclr
		&__btn
			&:hover
				background-color $mainclr
				border-color $mainclr
	@media (min-width: 1680px)
		&__phone
			font-size 22px
		&__phone
